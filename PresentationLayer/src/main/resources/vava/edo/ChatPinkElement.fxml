<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="user" alignment="BOTTOM_LEFT" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vava.edo.controllers.ChatScreen.ChatPinkElementController">
   <children>
      <VBox alignment="TOP_RIGHT">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
         <children>
            <Label fx:id="username" alignment="CENTER_RIGHT" text="Username" textFill="#ff9797">
               <font>
                  <Font name="Arial" size="16.0" />
               </font>
            </Label>
            <Label fx:id="message" contentDisplay="CENTER" maxWidth="350.0" style="-fx-background-color: #ff9797; -fx-background-radius: 20;" text="ahoj" wrapText="true">
               <font>
                  <Font name="Arial" size="28.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
               </padding>
            </Label>
            <Label fx:id="time" alignment="CENTER_RIGHT" layoutX="10.0" layoutY="70.0" text="Time" textFill="#ff9797">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</HBox>
